<%- include('../partials/header', { title: 'Login Page' }) %>
<%- include('../partials/navbar', { role }) %>

<section>
    <div class="d-flex align-items-center justify-content-center full-height">
        <div class="container bg-body-tertiary rounded-4 shadow p-5 mt-5 border border-warning" style="max-width: 560px; ">
            <h1 class="fs-1 text-center">Register Form</h1>
            <hr class="border border-warning border-2 opacity-75 col-md-5 mx-auto" >
            <% if(errors) {%>
                <div class="alert alert-danger text-center" role="alert">
                    <ul>
                        <% errors.forEach(el => { %>
                            <li><%= el %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <form action="/register" method="post" class="">
            <div class="row justify-content-center px-3">
                <div class="mt-3">
                    <input type="text" class="form-control form-control-lg rounded-5 border border-warning" name="fullName" id="fullName" placeholder="Input your full name">
                </div>
                <div class="mt-3">
                    <input type="text" class="form-control form-control-lg rounded-5 border border-warning" name="phoneNumber" id="phoneNumber" placeholder="Input your phone number">
                </div>
                <div class="mt-3">
                    <input type="text" class="form-control form-control-lg rounded-5 border border-warning" name="address" id="address" placeholder="Input your address">
                </div>
                <div class="mt-3">
                    <input type="date" class="form-control form-control-lg rounded-5 border border-warning" name="dateOfBirth" id="dateOfBirth" placeholder="Input your dateOfBirth">
                </div>
                <div class="mt-3">
                    <input type="text" class="form-control form-control-lg rounded-5 border border-warning" name="username" id="username" placeholder="Input your username">
                </div>
                <div class="mt-3">
                    <input type="email" class="form-control form-control-lg rounded-5 border border-warning" name="email" id="email" placeholder="Input your email">    
                </div>
                <div class="mt-3">
                    <input type="password" class="form-control form-control-lg rounded-5 border border-warning" name="password" id="password" placeholder="Input your password">    
                </div>
                <div class="mt-3">
                    <input type="text" class="form-control form-control-lg rounded-5 border border-warning" name="role" id="role" placeholder="Input your role">    
                </div>
            </div>
            <button type="submit" class="btn btn-warning btn-lg d-grid col-4 mx-auto mt-4 rounded-5" name="submit">Submit</button>
        </form>
    </div>
</div>

<%- include('../partials/footer') %>