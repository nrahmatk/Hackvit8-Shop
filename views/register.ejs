<%- include('navbar') %>

<section>
    <div class="d-flex align-items-center justify-content-center full-height">
        <div class="container bg-body-tertiary rounded-4 shadow p-5 mt-5" style="max-width: 560px; ">
            <h1 class="fs-1 text-center">Register Form</h1>
            <hr class="border border-warning border-2 opacity-75 col-md-5 mx-auto" >
            <form action="/register" method="post" class="">
            <div class="row justify-content-center px-5">
                <div class="mt-4">
                    <input type="text" class="form-control form-control-lg rounded-5" name="username" id="username" placeholder="Input your username">
                </div>
                <div class="mt-4">
                    <input type="email" class="form-control form-control-lg rounded-5" name="email" id="email" placeholder="Input your email">    
                </div>
                <div class="mt-4">
                    <input type="password" class="form-control form-control-lg rounded-5" name="password" id="password" placeholder="Input your password">    
                </div>
                <div class="mt-4">
                    <input type="text" class="form-control form-control-lg rounded-5" name="role" id="role" placeholder="Input your role">    
                </div>
            </div>
            <button type="submit" class="btn btn-warning btn-lg d-grid col-4 mx-auto mt-5 rounded-5" name="submit">Submit</button>
        </form>
    </div>
</div>
</section>
</body>
</html>